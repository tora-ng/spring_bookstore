<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.kosmo.ysy.mapper.UserMapper">

	<resultMap id="userMap" type="edu.kosmo.ysy.vo.UserVO">
		<id column="userid" property="userid" />
		<result column="username" property="username" />
		<result column="userpassword" property="userpassword" />
		<result column="gender" property="gender" />
		<result column="email" property="email" />
		<result column="useradress" property="useradress" />
		<result column="userphone" property="userphone" />
		<result column="date" property="date" />
		<result column="mileage" property="mileage" />
		<result column="enabled" property="enabled" />
		<collection property="authList" resultMap="authMap" />
	</resultMap>

	<resultMap id="authMap" type="edu.kosmo.ysy.vo.AuthVO">
		<result property="userid" column="userid" />
		<result property="authority" column="authority" />
	</resultMap>

	<select id="getUser" resultMap="userMap">
		select * from member, authority where member.userid = authority.userid and member.userid = #{userid}
	</select>


</mapper>